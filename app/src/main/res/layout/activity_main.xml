<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="15dp"
    android:orientation="vertical"
    android:background="#EDEDED">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#503580"
        android:text="RifatMart"
        android:textStyle="italic"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:padding="5dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mark the produck!!"
        android:textStyle="bold|italic"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:paddingTop="5dp"
    />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TableRow>

            <CheckBox
                android:id="@+id/cbBeras"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Beras 1Kg"
                android:textSize="16.5sp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Rp. 16.250"
                android:textSize="17sp" />
        </TableRow>

        <TableRow
            android:background="#DDDADD">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Quantity" />

            <EditText
                android:id="@+id/etBeras"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:textSize="18sp"
                android:gravity="center"
                />

        </TableRow>

        <TableRow
            >

            <CheckBox
                android:id="@+id/cbMinyak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text="Minyak Goreng 1L"
                android:textSize="16.5sp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Rp. 14.594"
                android:textSize="17sp" />

        </TableRow>

        <TableRow
            android:background="#DDDADD">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="quantity" />

            <EditText
                android:id="@+id/etMinyak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:textSize="18sp"
                android:gravity="center"

                />

        </TableRow>

        <TableRow>

            <CheckBox
                android:id="@+id/cbGula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Gula 500gram"
                android:textSize="16.5sp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Rp. 10.000"
                android:textSize="17sp" />
        </TableRow>

        <TableRow
            android:background="#DDDADD">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="quantity" />

            <EditText
                android:id="@+id/etGula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:textSize="15sp"
                android:gravity="center"
                />

        </TableRow>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="Membership"
            android:textStyle="bold"/>

        <RadioGroup>
            <RadioButton
                android:id="@+id/rdMember"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F3CB51"
                android:text="Yes" />

            <RadioButton
                android:id="@+id/noMember"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFEFE"
                android:text="No" />
        </RadioGroup>


    </TableLayout>

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="191dp"
        android:background="#DFDFDF"
        android:text="price" />

    <Button
        android:id="@+id/btnOk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="OK" />




</LinearLayout>